{
    "manifest_version": 3,
    "name": "Rickroll Counter",
    "version": "1.0.0",
    "description": "How many times have you got Rickrolled?",
    "action": { "default_popup": "index.html" },
    "permissions": [
      "storage"
    ],
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "background": {
      "service_worker": "src/background.ts",
      "type": "module"
    },
    "content_scripts" : [
      {
        "matches": ["https://www.youtube.com/watch?v=dQw4w9WgXcQ"],
        "js": ["src/scripts/content_script.ts"]
      }
    ]
  }